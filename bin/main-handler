#!/usr/bin/php
<?php

use gipfl\RrdTool\RrdCached\Client as RrdCachedClient;
use IcingaGraphing\InstanceConfig;
use IcingaGraphing\Main;
use IcingaGraphing\MainUpdateHandler;
use IcingaGraphing\RedisPerfDataApi;

require_once dirname(__DIR__) . '/vendor/autoload.php';
$config = include __DIR__ . '/config.inc.php';

$instanceConfig = new InstanceConfig($config->basedir);
$main = new Main();
$redis = new RedisPerfDataApi($main->getLoop(), $main->getLogger(), $instanceConfig->getRedisSocketUri());
$redis->setClientName('IcingaGraphing::main');
$rrdCached = new RrdCachedClient($instanceConfig->getRrdCachedSocket(), $main->getLoop());
$deferredHandler = new MainUpdateHandler($redis, $rrdCached, $main->getLogger());
$deferredHandler->run($main->getLoop());
$main->startLoop();
