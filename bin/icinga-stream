#!/usr/bin/php
<?php

use iPerGraph\IcingaStreamer;
use iPerGraph\Main;
use iPerGraph\RedisPerfDataApi;

require_once dirname(__DIR__) . '/vendor/autoload.php';
$config = include __DIR__ . '/config.inc.php';

$main = new Main();
$redis = new RedisPerfDataApi($main->getLoop(), $main->getLogger(), $config->redis);
$redis->setClientName('iPerGraph::icinga-stream');
$icinga = new IcingaStreamer($main->getLoop(), $main->getLogger(), $config->icinga);
$icinga->on('perfData', [$redis, 'shipPerfData']);
$main->startLoop();
